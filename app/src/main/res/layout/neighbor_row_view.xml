<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="13dip"
    android:paddingLeft="13dip"
    android:paddingTop="10dip"
    android:paddingRight="13dip"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/neighbor_row"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request"
        android:textSize="10sp"
        android:text="@string/tab_to_connect"
        android:layout_below="@+id/neighbor_row"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#81020202"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/muteicon2"
        android:layout_alignParentRight="true"
        android:id="@+id/muteButton"
        android:contentDescription="@string/mute_icon" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/addicon"
        android:id="@+id/addAsFriend"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/muteButton"
        android:layout_toStartOf="@+id/addAsFriend" />


</RelativeLayout>